---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import { getRelativeLocaleUrl } from 'astro:i18n';
const { lang='en', title, description } = Astro.props;
const desc = description ?? {
  en: 'Solar fuel from plastic waste for coastal communities.',
  de: 'Solar-Treibstoff aus Plastikmüll für Küstengemeinden.'
}[lang];
const enUrl = getRelativeLocaleUrl(Astro.url, 'en');
const deUrl = getRelativeLocaleUrl(Astro.url, 'de');
---
<!DOCTYPE html>
<html lang={lang}>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{title ? `${title} | BASOLA` : 'BASOLA'}</title>
  <meta name="description" content={desc} />
  <link rel="alternate" hreflang="en" href={enUrl} />
  <link rel="alternate" hreflang="de" href={deUrl} />
</head>
<body class="text-secondary">
  <Header lang={lang} />
  <slot />
  <Footer lang={lang} />
</body>
</html>
