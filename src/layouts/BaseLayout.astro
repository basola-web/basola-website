---
import "../styles/theme.css";
import "../styles/globals.css";
import "../styles/animations.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { getRelativeLocaleUrl } from 'astro:i18n';
const { lang = 'en', t = {}, title = 'BASOLA', description = '', mainClass = '' } = Astro.props;
---
<!DOCTYPE html>
<html lang={lang} class="scroll-smooth">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{title}</title>
  {description && <meta name="description" content={description} />}
  <link rel="icon" type="image/png" href="/assets/basola_favicon.png" />
  <link rel="alternate" hreflang="en" href={getRelativeLocaleUrl('en')} />
  <link rel="alternate" hreflang="de" href={getRelativeLocaleUrl('de')} />
</head>
<body class="font-sans text-secondary">
  <Header t={t} />
  <main class={mainClass}>
    <slot />
  </main>
  <Footer lang={lang} />
  <script>
    const observer = new IntersectionObserver((entries)=>{
      entries.forEach(e=>{ if(e.isIntersecting){ e.target.classList.add('visible'); }});
    }, { threshold: 0.2 });
    document.querySelectorAll('[data-anim]').forEach(el=>observer.observe(el));
  </script>
</body>
</html>
