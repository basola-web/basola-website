---
const { lang = 'de' } = Astro.props;

const content =
  lang === 'de'
    ? {
        heading: 'Ladrilleros in Kolumbien',
        imgAlt: 'Ladrilleros von oben',
        link: '↗ In Google Maps öffnen',
      }
    : {
        heading: 'Ladrilleros in Colombia',
        imgAlt: 'Ladrilleros from above',
        link: '↗ Open in Google Maps',
      };
---

<section class="bg-white py-16 px-6">
  <h3 class="text-center text-2xl font-semibold mb-8">{content.heading}</h3>
  <div class="grid md:grid-cols-2 gap-6 max-w-5xl mx-auto">
    <img
      src="/assets/Ladrilleros.png"
      alt={content.imgAlt}
      class="rounded-xl shadow"
      data-aos="zoom-in"
    />
    <div class="rounded-xl overflow-hidden shadow">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d15936.517137918463!2d-77.351329!3d3.928644!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zM8KwNTUnNDMuMSJOIDc3wrAyMScwNC44Ilc!5e0!3m2!1sde!2sde!4v1680000000000"
        width="100%"
        height="300"
        loading="lazy"
        style="border:0;"
        allowfullscreen
      ></iframe>
    </div>
  </div>
  <p class="text-center mt-4">
    <a
      href="https://www.google.com/maps/place/3.928644,-77.351329"
      target="_blank"
      class="text-orange-600 underline"
      >{content.link}</a
    >
  </p>
</section>

