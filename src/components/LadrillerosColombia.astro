---
const { lang = 'de' } = Astro.props;
const content =
  lang === 'de'
    ? {
        heading: 'Ladrilleros in Kolumbien',
        imgAlt: 'Ladrilleros von oben',
      }
    : {
        heading: 'Ladrilleros in Colombia',
        imgAlt: 'Ladrilleros from above',
      };
---
<section class="bg-yellow-50">
  <div class="mx-auto max-w-6xl px-6 py-12">
    <h3 class="mb-8 text-xl font-bold text-basola-brown">{content.heading}</h3>
    <div class="grid items-center gap-8 md:grid-cols-2">
      <div class="flex justify-center" data-aos="zoom-in">
        <img src="/assets/Ladrilleros.png" alt={content.imgAlt} class="max-w-[500px] w-full rounded-xl shadow-md" />
      </div>
      <div class="flex justify-center">
        <iframe
          width="100%"
          height="400"
          style="border:0"
          loading="lazy"
          allowfullscreen
          referrerpolicy="no-referrer-when-downgrade"
          src="https://www.google.com/maps/embed/v1/place?key=YOUR_API_KEY&q=3.928644,-77.351329&zoom=6">
        </iframe>
      </div>
    </div>
  </div>
</section>
