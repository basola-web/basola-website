---
const { url, title, date, summary, tags = [], heroImage, moreLabel = 'Mehr', lang = 'de' } = Astro.props;
---
<article class="group relative overflow-hidden rounded-2xl bg-white ring-1 ring-black/5 shadow-sm transition hover:-translate-y-1 hover:shadow-lg">
  {heroImage && (
    <img src={heroImage} alt="" class="h-40 w-full object-contain p-4 opacity-90 group-hover:opacity-100 transition" loading="lazy" />
  )}
  <div class="p-5">
    <time class="text-xs uppercase tracking-wide text-basola-brown/60">{new Date(date).toLocaleDateString(lang)}</time>
    <h3 class="mt-1 text-lg font-bold text-basola-brown">{title}</h3>
    <p class="mt-2 line-clamp-3 text-sm text-basola-brown/80">{summary}</p>
    <div class="mt-3 flex flex-wrap gap-2">
      {tags.map((t) => <span class="rounded-full border border-basola-yellow/70 px-2 py-0.5 text-[11px] text-basola-brown bg-white/60">{t}</span>)}
    </div>
    <a href={url} class="mt-4 inline-flex items-center gap-2 text-basola-brown font-semibold hover:text-basola-yellow transition">
      {moreLabel} <span aria-hidden>â†’</span>
    </a>
  </div>
  <div class="pointer-events-none absolute inset-0 rounded-2xl ring-1 ring-transparent group-hover:ring-basola-yellow/40"></div>
</article>
