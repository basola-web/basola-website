---
const { lang, t } = Astro.props;
---
<section class="hero" id="hero">
  <video autoplay muted playsinline loop src="/assets/bootsfahrt_nach_ladrilleros.MP4"></video>
  <div class="hero-overlay">
    <h1>{t.title}</h1>
    <p class="lead">{t.lead}</p>
    <div class="cta">
      <a href={lang==='de'?'/de/technology':'/en/technology'} class="btn primary">{t.ctaPrimary}</a>
      <a href={lang==='de'?'/de/contact':'/en/contact'} class="btn secondary">{t.ctaSecondary}</a>
    </div>
  </div>
</section>
<style>
.hero{position:relative;height:100vh;overflow:hidden;}
.hero video{position:absolute;top:0;left:0;width:100%;height:100%;object-fit:cover;}
.hero-overlay{position:relative;z-index:1;display:flex;flex-direction:column;justify-content:center;height:100%;padding:0 2rem;color:white;}
.hero-overlay::before{content:"";position:absolute;inset:0;background:linear-gradient(180deg, rgba(0,0,0,.05) 0%, rgba(0,0,0,.35) 40%, rgba(11,15,20,.75) 100%),radial-gradient(800px 360px at 30% 85%, rgba(255,183,3,.18), transparent 60%);}
.hero-overlay h1{font-size:2.5rem;margin:0;max-width:15ch;position:relative;}
.hero-overlay .lead{max-width:65ch;margin-top:1rem;position:relative;}
.cta{margin-top:2rem;display:flex;gap:1rem;position:relative;}
.btn.primary{background:var(--color-yellow);color:var(--color-brown);padding:.75rem 1.5rem;border-radius:4px;font-weight:600;}
.btn.secondary{border:2px solid var(--color-yellow);color:var(--color-yellow);padding:.75rem 1.5rem;border-radius:4px;font-weight:600;}
</style>
