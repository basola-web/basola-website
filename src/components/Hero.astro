          { icon: 'âš“', label: 'Lokal betrieben' },
        ]
      : [
          { icon: 'ğŸ”‹', label: 'Off-grid' },
          { icon: 'ğŸŒ', label: 'Decentralized' },
          { icon: 'âš“', label: 'Locally operated' },
        ],
