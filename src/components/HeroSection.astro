---
const { t } = Astro.props;
---
<section id="hero" class="relative min-h-screen flex items-center justify-center text-center text-white">
  <video autoplay muted loop playsinline preload="none" poster="/assets/Ladrilleros_Strand.png" class="absolute inset-0 object-cover w-full h-full">
    <source src="/assets/bootsfahrt_nach_ladrilleros.MP4" type="video/mp4" />
  </video>
  <div class="absolute inset-0 bg-black/50"></div>
  <div class="relative z-10 max-w-2xl space-y-4">
    <h1 class="text-4xl font-bold">{t.title}</h1>
    <p>{t.lead}</p>
    <a href="#contact" class="inline-block bg-primary text-secondary font-bold py-3 px-6 rounded">{t.ctaPrimary}</a>
  </div>
</section>
