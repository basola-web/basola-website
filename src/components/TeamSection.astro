---
const { t } = Astro.props;

const team = [
  { name: 'Simon Langner', role: 'Founder', image: '/assets/Team/Simon_Langner.png' },
  { name: 'Lea Bachmann', role: 'Projektleitung', image: '/assets/Team/Lea_Bachmann.png' },
  { name: 'Marike Kardorff', role: 'Noch ausfüllen', image: '/assets/Team/Marike_Kardorff.png' },
  { name: 'Friedrich Heinen', role: 'Noch ausfüllen', image: '/assets/Team/Friedrich_Heinen.png' },
  { name: 'Lilia Ogor', role: 'TBD', image: '/assets/Team/Lilia.png' },
  { name: 'Olber', role: 'TBD', image: '/assets/Team/Olber.png' },
  { name: 'Luca', role: 'TBD', image: '/assets/Team/Luca.png' },
  { name: 'Paul', role: 'TBD', image: '/assets/Team/Paul.png' },
  { name: 'Poloju', role: 'TBD', image: '/assets/Team/Poloju.png' },
  { name: 'Stefan Eichler', role: 'TBD', image: '/assets/basola_favicon.png' },
];

const advisor = { name: 'Jörg Sievert', role: 'Advisor' };
---
<section class="py-24 px-6 bg-white text-center" id="team">
  <h2 class="text-4xl font-bold text-basola-brown mb-4">{t.heading}</h2>
  <div class="max-w-4xl mx-auto mb-12">
    <p class="text-secondary bg-neutral-50 dark:bg-neutral-800 p-6 rounded-2xl shadow text-left">{t.text}</p>
  </div>

  <div class="grid gap-10 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
    {team.map(({ name, role, image }, index) => (
      <div
        class="flex flex-col items-center transform transition duration-300 hover:scale-105 opacity-0 animate-fade-in-up"
        style={`animation-delay: ${index * 100}ms`}
      >
        <img
          src={image}
          alt={name}
          class="w-32 h-32 rounded-full object-cover border-4 border-basola-yellow mb-4 shadow-md"
        />
        <h3 class="text-lg font-semibold text-basola-brown">{name}</h3>
        <p class="text-sm text-secondary">{role}</p>
      </div>
    ))}
  </div>

  <div class="mt-16">
    <h3 class="text-2xl font-bold text-basola-brown mb-4">Advisor</h3>
    <div class="flex flex-wrap justify-center gap-10">
      <div class="flex flex-col items-center opacity-0 animate-fade-in-up" style="animation-delay: 200ms">
        <img
          src="/assets/basola_favicon.png"
          alt={advisor.name}
          class="w-28 h-28 rounded-full object-cover border-4 border-gray-300 mb-3 opacity-80"
        />
        <h4 class="text-md font-semibold text-basola-brown">{advisor.name}</h4>
        <p class="text-sm text-secondary">{advisor.role}</p>
      </div>
    </div>
  </div>
</section>
