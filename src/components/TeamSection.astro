  <div class="grid gap-6 md:grid-cols-3 max-w-5xl mx-auto">
    <div class="text-center">
      <div class="w-24 h-24 bg-gray-300 rounded-full mx-auto"></div>
      <p class="mt-2 font-bold">Alice</p>
    </div>
    <div class="text-center">
      <div class="w-24 h-24 bg-gray-300 rounded-full mx-auto"></div>
      <p class="mt-2 font-bold">Bob</p>
    </div>
    <div class="text-center">
      <div class="w-24 h-24 bg-gray-300 rounded-full mx-auto"></div>
      <p class="mt-2 font-bold">Charlie</p>
    </div>
  </div>
</section>
