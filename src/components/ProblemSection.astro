---
const { heading, text, stats } = Astro.props;
---
<section id="problem" class="bg-white text-secondary py-16">
  <div class="max-w-6xl mx-auto px-4" data-anim>
    <h2 class="text-3xl font-bold mb-4">{heading}</h2>
    <p class="mb-8">{text}</p>
    <div class="grid md:grid-cols-3 gap-8 mb-8">
      <div class="text-center">
        <div class="text-4xl font-bold text-primary"><span id="stat-plastic">0</span> t</div>
        <div class="text-sm uppercase">{stats.plastic}</div>
      </div>
      <div class="text-center">
        <div class="text-4xl font-bold text-primary"><span id="stat-co2">0</span> kg</div>
        <div class="text-sm uppercase">{stats.co2}</div>
      </div>
      <div class="text-center">
        <div class="text-4xl font-bold text-primary"><span id="stat-fuel">0</span> L</div>
        <div class="text-sm uppercase">{stats.fuel}</div>
      </div>
    </div>
  </div>
</section>
<script is:client="load">
  import { CountUp } from 'countup.js';
  const opts = { duration: 2 };
  new CountUp('stat-plastic', 12000000, opts).start();
  new CountUp('stat-co2', 86, opts).start();
  new CountUp('stat-fuel', 40, opts).start();
</script>
