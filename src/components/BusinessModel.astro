---
const { t } = Astro.props;
---
<section id="business" data-anim>
  <h2>{t.heading}</h2>
  <div class="grid">
    <div class="card"><h3>Fuel-Sales</h3><p>{t.fuel}</p></div>
    <div class="card"><h3>Gate-Fee</h3><p>{t.gate}</p></div>
    <div class="card"><h3>Biochar</h3><p>{t.biochar}</p></div>
    <div class="card"><h3>Service</h3><p>{t.service}</p></div>
  </div>
</section>
<style>
#business h2{text-align:center;margin-bottom:2rem;}
.grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(200px,1fr));gap:1rem;}
.card{padding:1rem;border:1px solid var(--color-brown);border-radius:8px;}
.card h3{margin-top:0;color:var(--color-brown);}
</style>
