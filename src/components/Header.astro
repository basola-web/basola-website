---
import LangToggle from './LangToggle.astro';
const { lang, t } = Astro.props;
const nav = t.nav;
---
<header class="header">
  <a href={lang==='de'?'/de/':'/en/'} class="logo"><img src="/assets/basola_logo.png" alt="BASOLA" height="40"/></a>
  <nav class="nav-links">
    <a href={lang==='de'?'/de/technology':'/en/technology'}>{nav.technology}</a>
    <a href={lang==='de'?'/de/impact':'/en/impact'}>{nav.impact}</a>
    <a href={lang==='de'?'/de/pilot':'/en/pilot'}>{nav.pilot}</a>
    <a href={lang==='de'?'/de/team':'/en/team'}>{nav.team}</a>
    <a href={lang==='de'?'/de/contact':'/en/contact'}>{nav.contact}</a>
  </nav>
  <LangToggle currentLang={lang}/>
</header>
<style>
.header{position:sticky;top:0;height:var(--header-height);backdrop-filter:blur(8px);background:rgba(255,255,255,.7);display:flex;align-items:center;justify-content:space-between;padding:0 1rem;z-index:1000;}
.nav-links{display:flex;gap:1rem;}
.nav-links a{color:var(--color-dark);font-weight:500;}
</style>
