---
interface Step {
  title: string;
  description: string;
  icon: string;
}

const {
  lang = 'de',
  sectionId = 'solution',
} = Astro.props;

const i18n =
  lang === 'de'
    ? {
        heading: '♻️ Unsere Lösung: Sauberer Treibstoff aus Plastikmüll',
        desc: 'Ein geschlossener Prozess, der Plastikmüll mit Sonnenenergie in nutzbaren synthetischen Kraftstoff verwandelt.',
        steps: [
          {
            title: 'Müll',
            description:
              'Gemischter Kunststoffabfall wird lokal gesammelt und dient als Ausgangsstoff.',
            icon: '/assets/icons/waste.svg',
          },
          {
            title: 'Schredder',
            description:
              'Zerkleinerung zu homogenen Flakes für die Weiterverarbeitung.',
            icon: '/assets/icons/shredder.svg',
          },
          {
            title: 'Solarbetriebene Pyrolyse',
            description:
              'Thermische Zersetzung bei 400–550 °C unter Ausschluss von Sauerstoff – primär durch Solarwärme erhitzt.',
            icon: '/assets/icons/pyrolysis.svg',
          },
          {
            title: 'Fraktionierte Kondensation',
            description:
              'Die entstehenden Gase werden durch Abkühlung in Fraktionen getrennt.',
            icon: '/assets/icons/condensation.svg',
          },
          {
            title: 'Fuel',
            description:
              'Flüssiger synthetischer Kraftstoff (z. B. Benzin/Diesel) als Endprodukt.',
            icon: '/assets/icons/fuel.svg',
          },
        ],
      }
    : {
        heading: '♻️ Our solution: Clean fuel from plastic waste',
        desc: 'A closed process that uses solar energy to convert plastic waste into usable synthetic fuel.',
        steps: [
          {
            title: 'Waste',
            description:
              'Mixed plastic waste is collected locally and serves as feedstock.',
            icon: '/assets/icons/waste.svg',
          },
          {
            title: 'Shredder',
            description: 'Shredding into homogeneous flakes for further processing.',
            icon: '/assets/icons/shredder.svg',
          },
          {
            title: 'Solar-powered pyrolysis',
            description:
              'Thermal decomposition at 400–550 °C without oxygen — primarily heated by solar energy.',
            icon: '/assets/icons/pyrolysis.svg',
          },
          {
            title: 'Fractional condensation',
            description: 'Cooling separates the gases into fractions.',
            icon: '/assets/icons/condensation.svg',
          },
          {
            title: 'Fuel',
            description: 'Liquid synthetic fuel (e.g., gasoline/diesel) as the end product.',
            icon: '/assets/icons/fuel.svg',
          },
        ],
      };

const steps: Step[] = i18n.steps;
---

<section id={sectionId} class="font-sans tracking-tight">
  <div class="py-16 mx-auto max-w-6xl px-6">
    <header class="mb-10 text-center">
      <h2 class="text-3xl md:text-4xl font-extrabold text-[#723100]">{i18n.heading}</h2>
      <p class="mt-4 text-lg text-[#723100]/90 max-w-3xl mx-auto">{i18n.desc}</p>
    </header>

    <div id="process" class="relative">
      <div class="absolute top-12 left-0 w-full h-[4px] bg-[#723100]/20"></div>
      <div id="progress" class="absolute top-12 left-0 h-[4px] bg-[#ffd600] w-0 transition-[width] duration-1000 ease-in-out"></div>

      <div class="flex flex-col md:flex-row md:justify-between gap-12">
        {steps.map((s, i) => (
          <div
            class="flex flex-col items-center flex-1 opacity-0 translate-y-4 transition-all duration-500 ease-in-out"
            style={`transition-delay: ${i * 100}ms;`}
            data-step
          >
            <div class="w-24 h-24 flex items-center justify-center rounded-full border border-[#723100] bg-white p-3 mb-4">
              <img src={s.icon} alt={s.title} class="w-full h-full" />
            </div>
            <div class="bg-white rounded-xl shadow-md p-4 text-left w-full min-h-[120px]">
              <h3 class="font-semibold text-[#723100] mb-2">{s.title}</h3>
              <p class="text-sm text-[#723100]/80">{s.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <script is:client>
    const section = document.getElementById('process');
    const steps = section?.querySelectorAll('[data-step]');
    const progress = document.getElementById('progress');

    const io = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            progress?.classList.add('w-full');
            steps?.forEach((s) => s.classList.add('opacity-100', 'translate-y-0'));
            io.disconnect();
          }
        });
      },
      { threshold: 0.3 }
    );

    if (section) io.observe(section);
  </script>
</section>

