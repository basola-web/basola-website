---
const { t } = Astro.props;
---
<section id="contact" class="py-16 bg-gray-50">
  <h2 class="text-3xl font-bold text-center mb-8">{t.contact.heading}</h2>
  <form action="/api/contact" method="POST" class="max-w-md mx-auto space-y-4">
    <input type="text" name="name" placeholder={t.contact.name} required class="w-full border p-2 rounded" />
    <input type="email" name="email" placeholder={t.contact.email} required class="w-full border p-2 rounded" />
    <select name="reason" class="w-full border p-2 rounded">
      <option>{t.contact.reason}</option>
      <option value="donation">Donation</option>
      <option value="volunteer">Volunteer</option>
      <option value="partner">Partner</option>
    </select>
    <textarea name="message" rows="4" placeholder={t.contact.message} required class="w-full border p-2 rounded"></textarea>
    <button type="submit" class="bg-primary text-secondary font-bold py-2 px-4 rounded">{t.contact.submit}</button>
  </form>
</section>
