---
const { t, partners } = Astro.props;
const logos = [
  { src: '/assets/boreal_lights_logo.png', alt: 'Boreal Light' },
  {
    src: '/assets/enactus_karlsruhe_logo.png',
    alt: 'Enactus Karlsruhe',
    class: 'h-20',
  },
  { src: '/assets/kit_gruenderschmiede_logo.png', alt: 'KIT Gründer­schmiede' },
  { src: '/assets/ngo_uramba_logo.png', alt: 'NGO Uramba' },
  { src: '/assets/sena_logo.png', alt: 'SENA' },
  { src: '/assets/univalle_logo.png', alt: 'Universidad del Valle' },
];
---
<section id="contact" class="text-secondary py-16">
  <div class="mx-auto max-w-6xl grid md:grid-cols-2 gap-12 items-start">
    <div class="max-w-md mx-auto w-full text-center">
      <h3 class="text-2xl font-bold mb-8">{partners.heading}</h3>
      <div class="flex flex-wrap justify-center gap-6">
        {logos.map(({ src, alt, class: cls }) => (
          <img
            src={src}
            alt={alt}
            class={(cls ?? 'h-12') + ' object-contain'}
            loading="lazy"
          />
        ))}
      </div>
    </div>
    <div class="max-w-md mx-auto w-full">
      <h2 class="text-3xl font-bold mb-8 text-center">{t.heading}</h2>
      <form
        class="space-y-4 bg-white/80 backdrop-blur p-6 rounded-2xl shadow-lg ring-1 ring-black/5"
        method="POST"
        action="https://formsubmit.co/enactus.basola.it@gmail.com"
      >
        <div>
          <label for="name" class="block text-sm mb-1">{t.name}</label>
          <input
            id="name"
            name="name"
            type="text"
            required
            placeholder={t.name}
            class="w-full border border-basola-brown/20 p-3 rounded-lg focus:border-basola-yellow focus:ring-basola-yellow"
          />
        </div>
        <div>
          <label for="email" class="block text-sm mb-1">{t.email}</label>
          <input
            id="email"
            name="email"
            type="email"
            required
            placeholder={t.emailPlaceholder}
            class="w-full border border-basola-brown/20 p-3 rounded-lg focus:border-basola-yellow focus:ring-basola-yellow"
          />
        </div>
        <div>
          <label for="org" class="block text-sm mb-1">{t.org}</label>
          <input
            id="org"
            name="organisation"
            type="text"
            placeholder={t.org}
            class="w-full border border-basola-brown/20 p-3 rounded-lg focus:border-basola-yellow focus:ring-basola-yellow"
          />
        </div>
        <div>
          <label for="role" class="block text-sm mb-1">{t.role}</label>
          <select
            id="role"
            name="role"
            class="w-full border border-basola-brown/20 p-3 rounded-lg focus:border-basola-yellow focus:ring-basola-yellow"
          >
            <option value="partner">{t.roles.partner}</option>
            <option value="investor">{t.roles.investor}</option>
            <option value="ngo">{t.roles.ngo}</option>
            <option value="other">{t.roles.other}</option>
          </select>
        </div>
        <div>
          <label for="message" class="block text-sm mb-1">{t.message}</label>
          <textarea
            id="message"
            name="message"
            rows="4"
            required
            placeholder={t.message}
            class="w-full border border-basola-brown/20 p-3 rounded-lg focus:border-basola-yellow focus:ring-basola-yellow"
          ></textarea>
        </div>
        <input type="hidden" name="_subject" value="Website contact form" />
        <button
          type="submit"
          class="w-full bg-primary text-secondary font-bold py-3 px-4 rounded-lg hover:bg-primary/90"
        >
          {t.submit}
        </button>
      </form>
    </div>
  </div>
</section>

