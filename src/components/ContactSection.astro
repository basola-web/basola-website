---
const { heading, t } = Astro.props;
---
<section id="contact" class="py-16 bg-gray-50 text-secondary">
  <div class="max-w-6xl mx-auto px-4 text-center">
    <h2 class="text-3xl font-bold mb-8">{heading}</h2>
    <form action="/api/contact" method="POST" class="max-w-md mx-auto space-y-4">
      <div>
        <label class="block text-sm mb-1">{t.name}</label>
        <input type="text" name="name" required class="w-full border p-2 rounded" />
      </div>
      <div>
        <label class="block text-sm mb-1">{t.email}</label>
        <input type="email" name="email" required class="w-full border p-2 rounded" />
      </div>
      <div>
        <label class="block text-sm mb-1">{t.reason}</label>
        <select name="reason" class="w-full border p-2 rounded">
          <option value="donation">{t.reasons.donation}</option>
          <option value="volunteer">{t.reasons.volunteer}</option>
          <option value="partner">{t.reasons.partner}</option>
          <option value="general">{t.reasons.general}</option>
        </select>
      </div>
      <div>
        <label class="block text-sm mb-1">{t.message}</label>
        <textarea name="message" rows="4" required class="w-full border p-2 rounded"></textarea>
      </div>
      <button type="submit" class="bg-primary text-secondary font-bold py-2 px-4 rounded">{t.submit}</button>
    </form>
  </div>
</section>
