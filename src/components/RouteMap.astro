---
const {
  lang = 'de',
  i18n = lang === 'de'
    ? {
        title: 'Ladrilleros: Ein Ort zwischen Naturschönheit und Umweltlast',
        caption: 'Die Küstenlinie von Ladrilleros – wunderschön, aber bedroht durch Plastikströme.',
        coastAlt: 'Ladrilleros Küste',
        coastTitle: 'Ladrilleros – Pazifikstrand'
      }
    : {
        title: 'Ladrilleros: A place between natural beauty and environmental burden',
        caption: 'The coastline of Ladrilleros – beautiful yet threatened by plastic streams.',
        coastAlt: 'Ladrilleros coast',
        coastTitle: 'Ladrilleros – Pacific beach'
      },
  sectionId = 'route-map'
} = Astro.props;
---
<section id={sectionId} class="bg-yellow-50">
  <div class="mx-auto max-w-6xl px-6 py-12">
    <h3 class="mb-8 text-xl font-bold text-basola-brown">{i18n.title}</h3>
    <div class="grid items-center gap-8 md:grid-cols-2">
      <div class="flex justify-center">
        <img src="/assets/Containersolution_basola.png" alt="Basola Containerlösung" class="max-w-[350px] w-full rounded-xl shadow-md" data-aos="fade-right" />
      </div>
      <div class="flex justify-center">
        <iframe
          width="100%"
          height="350"
          style="border:0"
          loading="lazy"
          allowfullscreen
          referrerpolicy="no-referrer-when-downgrade"
          src="https://maps.google.com/maps?q=3.928644,-77.351329&z=15&output=embed">
        </iframe>
      </div>
    </div>
    <figure class="mt-12">
      <img src="/assets/Ladrilleros_Strand.png" alt={i18n.coastAlt} title={i18n.coastTitle} class="w-full max-h-[600px] object-cover" data-aos="fade-in" />
      <figcaption class="mt-2 text-center text-sm text-basola-brown/75">{i18n.caption}</figcaption>
    </figure>
  </div>
</section>
