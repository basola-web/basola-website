---
const { t } = Astro.props;
const logos = [
  {
    src: '/assets/boreal_lights_logo.png',
    alt: 'Boreal Light',
    href: 'https://www.boreallight.com/'
  },
  {
    src: '/assets/enactus_karlsruhe_logo.png',
    alt: 'Enactus Karlsruhe',
    href: 'https://enactus-karlsruhe.de/projects'
  },
  {
    src: '/assets/kit_gruenderschmiede_logo.png',
    alt: 'KIT Gründerschmiede',
    href: 'https://kit-gruenderschmiede.de/'
  },
  {
    src: '/assets/ngo_uramba_logo.png',
    alt: 'Plástico Precioso Uramba',
    href: 'https://www.plasticopreciosouramba.com/'
  },
  {
    src: '/assets/sena_logo.png',
    alt: 'SENA',
    href: 'https://www.sena.edu.co/'
  },
  {
    src: '/assets/univalle_logo.png',
    alt: 'Universidad del Valle',
    href: 'https://www.univalle.edu.co/'
  }
];
---
<section id="partners" class="bg-gray-50 text-secondary">
  <div class="max-w-5xl mx-auto text-center">
    <h2 class="text-3xl font-bold mb-8" data-anim>{t.heading}</h2>
    <div class="flex flex-wrap justify-center gap-6">
      {logos.map(({ src, alt, href }) => (
        <a
          href={href}
          target="_blank"
          rel="noopener noreferrer"
          data-anim
        >
          <img
            src={src}
            alt={alt}
            class="h-12 object-contain transition-transform hover:scale-105"
            loading="lazy"
          />
        </a>
      ))}
    </div>
  </div>
</section>
