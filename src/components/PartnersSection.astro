---
const { t } = Astro.props;
const logos = [
  '/assets/boreal_lights_logo.png',
  '/assets/enactus_karlsruhe_logo.png',
  '/assets/kit_gruenderschmiede_logo.png',
  '/assets/ngo_uramba_logo.png',
  '/assets/sena_logo.png',
  '/assets/univalle_logo.png'
];
---
<section id="partners" class="bg-gray-50 text-secondary">
  <div class="max-w-5xl mx-auto text-center">
    <h2 class="text-3xl font-bold mb-8">{t.heading}</h2>
    <div class="flex flex-wrap justify-center gap-6">
      {logos.map((src) => (
        <img src={src} alt="partner" class="h-12 object-contain" loading="lazy" />
      ))}
    </div>
  </div>
</section>
