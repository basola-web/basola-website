---
const { t } = Astro.props;
const logos = [
  { src: '/assets/boreal_lights_logo.png', alt: 'Boreal Lights GmbH' },
  { src: '/assets/enactus_karlsruhe_logo.png', alt: 'Enactus Karlsruhe e.V.', extra: 'scale-[1.1] md:h-[56px]' },
  { src: '/assets/kit_gruenderschmiede_logo.png', alt: 'KIT Gr√ºnderschmiede' },
  { src: '/assets/ngo_uramba_logo.png', alt: 'NGO Uramba' },
  { src: '/assets/sena_logo.png', alt: 'SENA' },
  { src: '/assets/univalle_logo.png', alt: 'Universidad del Valle' }
];
---
<section id="partner" class="bg-gray-50 text-secondary">
  <div class="max-w-5xl mx-auto text-center">
    <h2 class="text-3xl font-bold mb-8">{t.heading}</h2>
    <div class="flex flex-wrap justify-center gap-6">
      {logos.map(({ src, alt, extra }) => (
        <img src={src} alt={alt} class={`h-12 md:h-14 object-contain ${extra ?? ''}`} loading="lazy" />
      ))}
    </div>
  </div>
</section>
