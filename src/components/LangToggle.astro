---
const { currentLang } = Astro.props;
const other = currentLang === 'de' ? 'en' : 'de';
---
<a href={`/${other}/`} class="lang-pill" data-lang={other}>{other.toUpperCase()}</a>
<script>
  const el = document.currentScript.previousElementSibling;
  el.addEventListener('click', ()=> localStorage.setItem('lang', el.dataset.lang));
</script>
<style>
.lang-pill{padding:.25rem .75rem;border-radius:999px;background:var(--color-yellow);color:var(--color-brown);font-weight:600;}
</style>
