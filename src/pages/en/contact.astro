---
import BaseLayout from '../../layouts/Base.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import en from '../../i18n/en.json';
const lang='en';
const t=en;
---
<BaseLayout lang={lang} title="Contact">
  <Header lang={lang} t={t} />
  <main class="content">
    <section id="contact">
      <h1>{t.contact.heading}</h1>
      <form action="mailto:info@basola.com" method="post">
        <label>{t.contact.name}<input type="text" name="name" required></label>
        <label>{t.contact.email}<input type="email" name="email" required></label>
        <label>{t.contact.org}<input type="text" name="org"></label>
        <label>{t.contact.message}<textarea name="message" required></textarea></label>
        <label>{t.contact.role}
          <select name="role">
            <option value="partner">{t.contact.roles.partner}</option>
            <option value="investor">{t.contact.roles.investor}</option>
            <option value="ngo">{t.contact.roles.ngo}</option>
            <option value="other">{t.contact.roles.other}</option>
          </select>
        </label>
        <button type="submit">{t.contact.submit}</button>
      </form>
    </section>
  </main>
  <Footer lang={lang} />
</BaseLayout>
<style>
main{padding:4rem 1rem;display:flex;justify-content:center;}
form{display:grid;gap:1rem;max-width:400px;width:100%;}
input,textarea,select{width:100%;padding:.5rem;}
button{background:var(--color-yellow);color:var(--color-brown);border:none;padding:.75rem;font-weight:600;cursor:pointer;}
</style>
